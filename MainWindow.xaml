<Window x:Class="Login.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid Background="AliceBlue" Margin="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="White" Margin="30">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="E-Mail" FontSize="20" Width="100" Height="30"/>
                <TextBox x:Name="txt_email" FontSize="20" Width="100" Height="30"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock FontSize="20" Width="100" Text="Password"/>
                <PasswordBox x:Name="txt_PW" FontSize="20" Width="100"></PasswordBox>
            </StackPanel>
            <Button Width="100" FontSize="20" Margin="5" Click="Button_Click">Login</Button>

        </StackPanel>
    </Grid>
</Window>
